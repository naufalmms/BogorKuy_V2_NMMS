<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.s.m.marzuk.n.bogorkuy.detailBacaLagi">

    <TextView
        android:id="@+id/tv1s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUDUL ARTIKEL"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/gambarArt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/tv1s" />

    <com.bluejamesbond.text.DocumentView
        android:layout_marginTop="10dp"
        android:id="@+id/kontenArt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/gambarArt"
        app:documentView_textAlignment="justified"></com.bluejamesbond.text.DocumentView>

</RelativeLayout>
