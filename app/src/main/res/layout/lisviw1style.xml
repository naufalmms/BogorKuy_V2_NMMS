<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:focusable="false"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/gambarArt"
        android:background="#7add9c"
        android:focusable="false" />

    <com.bluejamesbond.text.DocumentView
        android:id="@+id/kontenArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulArt"
        android:background="@drawable/bulat2"
        android:focusable="false"
        app:documentView_insetPaddingBottom="10dp"
        app:documentView_insetPaddingLeft="10dp"
        app:documentView_insetPaddingRight="10dp"
        app:documentView_insetPaddingTop="10dp"
        app:documentView_textAlignment="justified">

    </com.bluejamesbond.text.DocumentView>


    <ImageView
        android:id="@+id/gambarArt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:focusable="false"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/judulArt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambarArt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@drawable/bulat"
        android:focusable="false"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#ffff" />


</RelativeLayout>